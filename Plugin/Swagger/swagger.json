{
    "openapi": "3.0.1",
    "info": {
        "title": "API OF CUDIDI",
        "description": "This is the documentation API of Cudidi browser",
        "contact": {
            "email": "Cudidi@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "externalDocs": {
        "description": "Find out more about Cudidi",
        "url": "http://localhost:3000"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        },
        {
            "url": "https://localhost:3000"
        }
    ],
    "tags": [
        {
            "name": "article",
            "description": "Everything about your Articles"
        },
        {
            "name": "user",
            "description": "Operations about user"
        }
    ],
    "paths": {
        "/user/{page}&{limit}": {
            "$ref": "./paths/user.json#/pagination"
        },
        "/user/lazy-load-list/{lastId}&{limit}": {
            "$ref": "./paths/user.json#/lazyLoad"
        },
        "/register": {
            "$ref": "./paths/user.json#/create"
        },
        "/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Logs user into the system",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "Upload image",
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "Username": {
                                      "type": "string"
                                    },
                                    "Password": {
                                      "type": "string"
                                    }
                                  }
                            }
                        }
                    }
                },
              
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "headers": {
                            "X-Rate-Limit": {
                                "description": "calls per hour allowed by the user",
                                "schema": {
                                    "type": "integer",
                                    "format": "int32"
                                }
                            },
                            "X-Expires-After": {
                                "description": "date in UTC when token expires",
                                "schema": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            }
                        },
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid username/password supplied",
                        "content": {}
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Logs out current logged in user session",
                "operationId": "logoutUser",
                "responses": {
                    "default": {
                        "description": "successful operation",
                        "content": {}
                    }
                }
            }
        },
        "/login/google": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Logs user into the system",
                "operationId": "loginByGoogle",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "headers": {
                            "X-Rate-Limit": {
                                "description": "calls per hour allowed by the user",
                                "schema": {
                                    "type": "integer",
                                    "format": "int32"
                                }
                            },
                            "X-Expires-After": {
                                "description": "date in UTC when token expires",
                                "schema": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            }
                        },
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid username/password supplied",
                        "content": {}
                    }
                }
            }
        },
        "/user/me": {
            "$ref": "./paths/user.json#/getMe"
        },
        "/user/{id}": {
            "$ref": "./paths/user.json#/specifyUser/id"
        },
        "/user/update-password": {
            "$ref": "./paths/user.json#/updatePassword"
        },
        "/user/upload-avatar": {
            "$ref": "./paths/user.json#/uploadAvatar"
        },
        "/user/update-information": {
            "$ref": "./paths/user.json#/updateInformation"
        },
        "/user/search/{limit}?data={}": {
            "$ref": "./paths/user.json#/search"
        },
        "/article/{page}&{limit}": {
            "$ref": "./paths/article.json#/pagination"
        },
        "/article/lazy-load-list/{lastId}&{limit}": {
            "$ref": "./paths/article.json#/lazyLoad"
        },
        "/article/create": {
            "$ref": "./paths/article.json#/create"
        },
        "/article/upload-image": {
            "$ref": "./paths/article.json#/uploadImage"
        }

    }
}